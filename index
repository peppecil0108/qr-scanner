<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scanner QR con Sovrapposizione</title>
    <script src="https://unpkg.com/html5-qrcode" defer></script>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        #scanner-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            background: black;
        }
        #reader {
            width: 100%;
            height: 100%;
        }
        #info-box {
            position: absolute;
            bottom: 10%;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 15px;
            border-radius: 10px;
            display: none;
            width: 80%;
            text-align: center;
        }
    </style>
</head>
<body>

<div id="scanner-container">
    <div id="reader"></div>
    <div id="info-box"></div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", async function() {
        const infoBox = document.getElementById("info-box");

        // Richiedi il permesso della fotocamera
        try {
            await navigator.mediaDevices.getUserMedia({ video: true });
        } catch (error) {
            alert("Accesso alla fotocamera negato. Attiva i permessi nelle impostazioni.");
            return;
        }

        function onScanSuccess(decodedText) {
            infoBox.innerHTML = `<strong>QR Code Scansionato:</strong><br>${decodedText}`;
            infoBox.style.display = "block";
        }

        function onScanFailure(error) {
            console.warn(`Errore scansione: ${error}`);
        }

        let html5QrcodeScanner = new Html5QrcodeScanner(
            "reader", 
            { fps: 10, qrbox: 250 }
        );
        html5QrcodeScanner.render(onScanSuccess, onScanFailure);
    });
</script>

</body>
</html>
